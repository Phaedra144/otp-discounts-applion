<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingTop="100dp"
    card_view:cardCornerRadius="4dp">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        card_view:columnCount="2"
        card_view:rowCount="8">

        <TextView
            android:id="@+id/partnerTextView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/partner"
            android:textSize="16sp"
            android:textStyle="bold"
            card_view:layout_column="0"
            card_view:layout_gravity="center"
            card_view:layout_row="0" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/title"
            android:textSize="12sp"
            card_view:layout_column="0"
            card_view:layout_gravity="center"
            card_view:layout_row="1"
            card_view:layout_rowSpan="5"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="30dp" />

        <TextView
            android:id="@+id/endTme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/end_time"
            android:textSize="12sp"
            card_view:layout_column="0"
            card_view:layout_gravity="center"
            card_view:layout_row="7"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="166dp" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1.13"
            android:contentDescription="@string/logo"
            card_view:layout_column="1"
            card_view:layout_columnWeight="1"
            card_view:layout_gravity="center_vertical"
            card_view:layout_row="0"
            card_view:layout_rowSpan="7"
            card_view:layout_rowWeight="1" />
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>